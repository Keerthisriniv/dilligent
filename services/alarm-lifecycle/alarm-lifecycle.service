[Unit]
Description=Alarm Lifecycle API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/alarm-lifecycle
Environment=PATH=/opt/alarm-lifecycle/.venv/bin
ExecStart=/opt/alarm-lifecycle/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8081
Restart=on-failure

[Install]
WantedBy=multi-user.target


